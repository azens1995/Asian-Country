<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    android:elevation="8dp"
    android:backgroundTint="#ebecf5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvName"
                android:text="Name"
                android:layout_width="100dp"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@+id/tvName"
                android:id="@+id/name"
                android:text="Name"
                android:textAllCaps="true"
                android:textColor="#060b1e"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvCapital"
                android:text="Capital"
                android:textColor="@color/colorAccent"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@+id/tvCapital"
                android:id="@+id/capital"
                android:text="capital"
                android:textColor="#060b1e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvRegion"
                android:text="Region"
                android:layout_width="100dp"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@+id/tvRegion"
                android:id="@+id/region"
                android:text="capital"
                android:textColor="#060b1e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvArea"
                android:text="Capital"
                android:layout_width="100dp"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@+id/tvArea"
                android:id="@+id/area"
                android:text="capital"
                android:textColor="#060b1e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvPopulation"
                android:text="Population"
                android:layout_width="100dp"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@+id/tvPopulation"
                android:id="@+id/population"
                android:text="capital"
                android:textColor="#060b1e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvNative"
                android:text="Native Name"
                android:layout_width="100dp"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@+id/tvNative"
                android:id="@+id/nativeName"
                android:text="capital"
                android:textColor="#060b1e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>